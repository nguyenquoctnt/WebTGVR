@using VDMMutiline.SharedComponent.Constants
@model VDMMutiline.SharedComponent.Entities.tbl_PaymentInfo
@{
    /**/

    Layout = null;
}
<div class="modal fade text-left" id="hinhthucthanhtoan" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark white">
                <h4 class="modal-title white" id="myModalLabel17">Yêu cầu xuất hóa đơn</h4>
                <button type="button" class="close white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Updatehinhthucthanhtoan", "DanhSachVe", FormMethod.Post, new { @onsubmit = "return validateFormfrmyeucauxuat()", enctype = "multipart/form-data", @class = "form-horizontal", @data_parsley_validate = "", id = "frmyeucauxuat", @role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(z => Model.IdBooking)
                    <div class="form-horizontal">
                        <div class="form-group row">
                            <label class="col-sm-4 control-label no-padding-right text-left"> Hình thức </label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(x => Model.IdHinhThuc, Constant.Hinhthucthanhtoav2.dctName.Select(n => new SelectListItem { Selected = n.Key == Model.IdHinhThuc, Text = n.Value, Value = n.Key.ToString() }), new { @required = "Required", @class = "form-control", @placeholder = "" })
                            </div>
                          
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 control-label no-padding-right text-left"> Ghi chú </label>
                            <div class="col-sm-8">
                                @Html.TextAreaFor(z => z.Note, new { row = 3, @required = "Required", @class = "form-control", @placeholder = "Code" })
                            </div>
                        </div>
                        <div class="clearfix form-actions">
                            <div class="col-md-offset-3 col-md-9">
                                <button id="submityeucauxuat" type="submit" class="btn btn-info"><i class="ace-icon fa fa-check bigger-110"></i>Cập nhập</button>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
