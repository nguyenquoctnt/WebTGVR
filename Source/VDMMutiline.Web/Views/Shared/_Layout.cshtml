@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <meta name="description" content="Đăng nhập hệ thống">
    <meta name="author" content="ACT Group">
    <title>Quản lý hệ thống</title>
    <link href="/Content/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" />
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/Corejquery")
    <script src="~/Content/js/moment.min.js"></script>
    <script src="/Content/Selecttize/selectize.js"></script>
    <script src="/Content/Popup/jquery.bpopup.js"></script>
    <script src="/Content/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/Content/js/bootstrap-datepicker.min.js"></script>
    <script src="/Content/js/bootstrap-timepicker.min.js"></script>
    <link href="/Content/css/bootstrap-timepicker.min.css" rel="stylesheet" />

    <link href="/Content/Popup/Popubcss.css" rel="stylesheet" />
</head>
<body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-col="2-columns">
    @Html.Partial("_SliderBar")
    @Html.Action("Index", "Navbar", new { area = "" })
    <div class="app-content content container-fluid">
        <div class="content-wrapper">
            <div class="content-header row">
                @if (!string.IsNullOrEmpty(ViewBag.Title))
                {

                    <div class="content-header-left col-md-8 col-12 mb-2 breadcrumb-new">
                        <h3 class="content-header-title mb-0 d-inline-block"> @ViewBag.Title</h3>
                        <div class="row breadcrumbs-top d-inline-block">
                            <div class="breadcrumb-wrapper col-12">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a> @ViewBag.Description</a>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    @RenderSection("PageHeader", required: false)
                }
            </div>
            <div class="content-body">
                @RenderBody()
            </div>
        </div>
    </div>
    @Html.Partial("_Footer")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/toastr")

    <script src="/Content/daterangepicker/daterangepicker.js"></script>
    <script src="/Content/Selecttize/selectize.js"></script>
    <audio id="audio-alert" src="/content/audio/alert.mp3" preload="auto"></audio>
    <audio id="audio-fail" src="/content/audio/fail.mp3" preload="auto"></audio>
    <!-- END PRELOADS -->
    @RenderSection("scripts", false)
    <script>
        window.ParsleyConfig = {
            errorClass: 'has-error'
            , excluded: 'input[type=hidden]'
            , trigger: false
            , animate: true
            , focus: 'first'
            , validationMinlength: 3
            , validators: {}
            , errorElem: '<span></span>'
            , errorsWrapper: '<span class="help-block"></span>'
            , errorTemplate: "<div></div>"
            , classHandler: function (el) {
                return el.$element.closest(".form-control");
            }
        };
    </script>
    <style>
        .modal-dialog-center {
            margin-top: 25%;
        }
    </style>
    <div id="myModalloading" style="display: none" class="bbpopub">
        <div class="imageAjaxLoading">
            <img src="/Content/Popup/loading.gif" />
        </div>
    </div>

    <div class="modal fade text-left" id="createModel" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-dark white">
                    <h4 class="modal-title white" id="myModalLabel17">Thông tin</h4>
                    <button type="button" class="close white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contenCreate">
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade text-left" id="deleteModel" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger white">
                    <h4 class="modal-title white" id="myModalLabel17">Xác nhận thông tin</h4>
                    <button type="button" class="close white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contendelete">
                </div>
            </div>
        </div>
    </div>


</body>
</html>
