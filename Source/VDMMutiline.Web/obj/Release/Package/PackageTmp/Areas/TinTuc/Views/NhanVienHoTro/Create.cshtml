@model VDMMutiline.SharedComponent.Params.TblArticleParam
@{
    Layout = null;
}
<script src="/Scripts/ckeditor/ckeditor.js"></script>
<link href="/Content/TreeGridBootstrap/css/jquery.treegrid.css" rel="stylesheet" />
<script src="/Content/TreeGridBootstrap/js/jquery.treegrid.js"></script>
<script src="/Content/TreeGridBootstrap/js/jquery.treegrid.min.js"></script>
<script src="/Content/TreeGridBootstrap/js/jquery.treegrid.bootstrap3.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tree').treegrid();
    });
</script>
@using (Html.BeginForm("Create", "NhanVienHoTro", FormMethod.Post, new { @class = "form-horizontal", @data_parsley_validate = "", id = "frCreateTblArticle", @role = "form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.TblArticle.Id)
    @Html.HiddenFor(x => x.TblArticle.LoaiBaiviet)

<div class="form-body">
    @Html.HiddenFor(x => x.TblArticle.Id)
    @Html.HiddenFor(x => x.TblArticle.LoaiBaiviet)

    <ul class="nav nav-tabs nav-linetriangle nav-justified">
       
        <li class="nav-item active"><a class="nav-link active"  data-toggle="tab" href="#ttchung"><i class="green ace-icon fa fa-pencil-square-o bigger-125"></i> Thông tin chung</a></li>
     </ul>
    <div class="tab-content">
        <div id="ttchung" class="tab-pane fade in active show">
            <div class="form-group">
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Tên nhân viên</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.TblArticle.Tenbai, new { @Required = "Required", @class = "form-control", @placeholder = "" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Số điện thoại</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.TblArticle.Mota, new { @Required = "Required", @class = "form-control", @placeholder = "" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Skyper</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.TblArticle.SEODescription, new { @class = "form-control", @placeholder = "" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Facebook</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.TblArticle.SEOKeyword, new { @class = "form-control", @placeholder = "" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Zalo</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.TblArticle.SEOTitle, new { @class = "form-control", @placeholder = "" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Mail</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.TblArticle.Noidung, new { @class = "form-control thutu", @placeholder = "" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Thứ tự</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.TblArticle.Thutu, new { @class = "form-control thutu", @placeholder = "" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-md-4 label-control">Ảnh đại diện</label>
                    <div class="col-md-8">
                        <input type="file" name="Thumbinput" class="actFile" />
                        <br />
                        @if (!string.IsNullOrEmpty(Model.TblArticle.Thumb))
                        {
                            <img src="@Model.TblArticle.Thumb" style="height: 100px; width: 100px;" />
                        }
                        @Html.HiddenFor(x => x.TblArticle.Thumb)
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <div class="clearfix"></div>
    <div class="form-actions center">
        <a onclick="submitform()" class="btn btn-success btn-min-width mr-1 mb-1 actionmodal"><i class="fa fa-save"></i>Cập nhật</a>
        <button type="button" class="btn btn-dark btn-min-width mr-1 mb-1 actionmodal" data-dismiss="modal"><i class="ft-corner-down-left"></i>Đóng</button>
    </div>
</div>

}




