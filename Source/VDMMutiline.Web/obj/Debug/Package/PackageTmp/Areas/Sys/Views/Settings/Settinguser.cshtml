@model VDMMutiline.SharedComponent.Params.AspNetUsersParam
@using VDMMutiline.Ultilities
@{
    /**/


    var listin = new List<int> { 1, 2, 3, 4, 5, 6, 18, 14 };
    var rowIndex = 0;
}
<div class="card">
    @using (Html.BeginForm("Settinguser", "Settings", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @data_parsley_validate = "", id = "frCreate", @role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(z => Model.AspNetUsersInfo.Id)
        @ViewBag.erro
        <div class="card-header danhsach">
            <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
            <div class="heading-elements">
                <ul class="list-inline mb-0">
                    <li class="addnew">
                        <button type="submit" class="btn btn-success btn-block btnaddnew" style="    height: 35px;    padding-top: 9px; width: 150px;">
                            <i style="padding-right:10px" class="fa fa-save"></i>Lưu
                        </button>
                    </li>
                    <li class="fullscree"><a data-action="expand"><i class="ft-maximize"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="card-content collapse show">
            <div class="card-body card-dashboard">
                <div class="form form-horizontal">
                    <div class="row">
                        @if (ViewBag.checkdaily)
                        {
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 label-control">Hỗ trợ đặt vé</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(x => x.AspNetUsersInfo.PhoneNumber, new { @class = "form-control", @placeholder = "" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 label-control">Hỗ trợ</label>
                                    <div class="col-md-8">

                                        @Html.TextBoxFor(x => x.AspNetUsersInfo.PhoneNumber2, new { @class = "form-control", @placeholder = "" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="display:none">
                                <div class="form-group row">
                                    <label class="col-md-2 label-control">Link Gmap</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(x => x.AspNetUsersInfo.Gmap, new { @class = "form-control", @placeholder = "" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <label class="col-md-2 label-control">Facebook Page</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(x => x.AspNetUsersInfo.Facebook, new { @class = "form-control", @placeholder = "" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="display:none">
                                <div class="form-group row">
                                    <label class="col-md-2 label-control">Tên miền 1</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(x => x.AspNetUsersInfo.UrlDomain1, new { @readonly = "readonly", @class = "form-control", @placeholder = "" })
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-12">
                                <div class="form-group row">
                                    <label class="col-md-2 label-control">Tiêu đề Seo</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(x => x.AspNetUsersInfo.SeoTitle, new { @class = "form-control", @placeholder = "" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <label class="col-md-2 label-control">Mô tả Seo</label>
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(x => x.AspNetUsersInfo.SeoDes, new { @class = "form-control", @placeholder = "" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="display:none">
                                <div class="form-group row">
                                    <label class="col-md-2 label-control">Từ khóa Seo</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(x => x.AspNetUsersInfo.SeoKey, new {  @class = "form-control", @placeholder = "" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group row">
                                    <label class="col-md-2 label-control">Tên miền 2</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.AspNetUsersInfo.UrlDomain2, new { @class = "form-control", @placeholder = "" })
                                    </div>
                                    <div class="col-md-2">
                                        <div class="checkedcontrol">
                                            @if (Model.AspNetUsersInfo.IsSSLDomain2 == null)
                                            {
                                                Model.AspNetUsersInfo.IsSSLDomain2 = false;
                                            }
                                            @Html.CheckBox("AspNetUsersInfo.IsSSLDomain2", Model.AspNetUsersInfo.IsSSLDomain2 == true, new { @class = "icheckboxcs" })
                                            <label for="SysMenu_IsSystem">SSL PC</label>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="checkedcontrol">
                                            @if (Model.AspNetUsersInfo.IsSSLDomain2MB == null)
                                            {
                                                Model.AspNetUsersInfo.IsSSLDomain2MB = false;
                                            }
                                            @Html.CheckBox("AspNetUsersInfo.IsSSLDomain2MB", Model.AspNetUsersInfo.IsSSLDomain2MB == true, new { @class = "icheckboxcs" })
                                            <label for="SysMenu_IsSystem">SSL MB</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <label class="col-md-2 label-control">Tên miền 3</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.AspNetUsersInfo.UrlDomain3, new { @class = "form-control", @placeholder = "" })
                                    </div>
                                    <div class="col-md-2">
                                        <div class="checkedcontrol">
                                            @if (Model.AspNetUsersInfo.IsSSLDomain3 == null)
                                            {
                                                Model.AspNetUsersInfo.IsSSLDomain3 = false;
                                            }
                                            @Html.CheckBox("AspNetUsersInfo.IsSSLDomain3", Model.AspNetUsersInfo.IsSSLDomain3 == true, new { @class = "icheckboxcs" })
                                            <label for="SysMenu_IsSystem">SSL PC</label>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="checkedcontrol">
                                            @if (Model.AspNetUsersInfo.IsSSLDomain3MB == null)
                                            {
                                                Model.AspNetUsersInfo.IsSSLDomain3MB = false;
                                            }
                                            @Html.CheckBox("AspNetUsersInfo.IsSSLDomain3MB", Model.AspNetUsersInfo.IsSSLDomain3MB == true, new { @class = "icheckboxcs" })
                                            <label for="SysMenu_IsSystem">SSL MB</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            @Html.HiddenFor(x => x.AspNetUsersInfo.PhoneNumber, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.PhoneNumber2, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.Gmap, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.Facebook, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.UrlDomain1, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.UrlDomain2, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.UrlDomain3, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.IsSSLDomain2, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.IsSSLDomain3, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.IsSSLDomain2MB, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.IsSSLDomain3MB, new { })
                            @Html.HiddenFor(x => x.AspNetUsersInfo.SiteId, new { })
                        }
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group row">
                                        <label class="col-md-12 label-control text-left">Avtar</label>
                                        <div class="col-md-12">
                                            <input type="file" name="fileAvatar" />
                                            <br />
                                            <span style="    font-style: italic;    color: red;">(Kích thước:100x120)</span>
                                            <br />
                                            @if (!string.IsNullOrEmpty(Model.AspNetUsersInfo.Avatar))
                                            {
                                                <img src="@Model.AspNetUsersInfo.Avatar" style="height:auto; width:100%;" />
                                            }
                                            @Html.HiddenFor(x => x.AspNetUsersInfo.Avatar)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group row">
                                        <label class="col-md-12 label-control text-left">Logo</label>
                                        <div class="col-md-12">
                                            <input type="file" name="fileLogoUrl" />
                                            <br />
                                            <span style="    font-style: italic;    color: red;"> (Kích thước:75x70)</span>
                                            <br />
                                            @if (!string.IsNullOrEmpty(Model.AspNetUsersInfo.LogoUrl))
                                            {
                                                <img src="@Model.AspNetUsersInfo.LogoUrl" style="height:auto; width:100%;" />
                                            }
                                            @Html.HiddenFor(x => x.AspNetUsersInfo.LogoUrl)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group row">
                                        <label class="col-md-12 label-control text-left">Logo MB</label>
                                        <div class="col-md-12">
                                            <input type="file" name="fileLogoMbUrl" />
                                            <br />
                                            <span style="    font-style: italic;    color: red;"> (Kích thước:75x70)</span>
                                            <br />
                                            @if (!string.IsNullOrEmpty(Model.AspNetUsersInfo.LogoMbUrl))
                                            {
                                                <img src="@Model.AspNetUsersInfo.LogoMbUrl" style="height:auto; width:100%;" />
                                            }
                                            @Html.HiddenFor(x => x.AspNetUsersInfo.LogoMbUrl)
                                        </div>
                                    </div>
                                </div>
                                @if (ViewBag.checkdaily)
                                {
                                    <div class="col-md-3">
                                        <div class="form-group row">
                                            <label class="col-md-12 label-control text-left">Baner</label>
                                            <div class="col-md-12">
                                                <input type="file" name="filebaner" />
                                                <br />
                                                <span style="    font-style: italic;    color: red;"> (Kích thước:1400x450)</span>
                                                <br />
                                                @if (!string.IsNullOrEmpty(Model.AspNetUsersInfo.Baner))
                                                {
                                                    <img src="@Model.AspNetUsersInfo.Baner" style="height:auto; width:100%;" />
                                                }
                                                @Html.HiddenFor(x => x.AspNetUsersInfo.Baner)
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                { @Html.HiddenFor(x => x.AspNetUsersInfo.Baner, new { })}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <div class="tableconte">
                        <table id="dynamic-table" class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th class="sort-numeric">STT</th>
                                    <th>Tiêu đề</th>
                                    <th>Giá trị</th>
                                    <th>Mô tả</th>
                                    <th>Lần cuối cập nhập</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.SettingUserInfos != null)
                                {
                                    for (int i = 0; i < Model.SettingUserInfos.Count; i++)
                                    {
                                        rowIndex++;
                                        <tr class="gradeA">
                                            <td>
                                                @Html.HiddenFor(z => Model.SettingUserInfos[i].UserID)
                                                @Html.HiddenFor(z => Model.SettingUserInfos[i].IdKey)
                                                @Html.HiddenFor(z => Model.SettingUserInfos[i].IDSetting)
                                                @rowIndex
                                            </td>
                                            <td>@Model.SettingUserInfos[i].Name</td>
                                            <td>
                                                @Html.TextBoxFor(z => Model.SettingUserInfos[i].Value)
                                            </td>
                                            <td>@Model.SettingUserInfos[i].Description</td>
                                            <td>@Utility.GetDateString(Model.SettingUserInfos[i].UpdateDate)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>