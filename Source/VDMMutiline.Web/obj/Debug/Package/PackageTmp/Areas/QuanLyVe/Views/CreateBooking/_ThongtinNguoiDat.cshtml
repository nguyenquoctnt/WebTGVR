@model VDMMutiline.WebBackEnd.Models.CreareBookingModel
<div id="contacts" style="display:none">
    <h4 class="form-section"><i class="fa fa-paperclip"></i> Thông tin cá nhân</h4>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="full-name">
            Họ và tên <span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            @Html.TextBoxFor(x => Model.Contact.FullName, new { @Required = "Required", @class = "form-control", @placeholder = "Họ và tên" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
            Email <span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            @Html.TextBoxFor(x => Model.Contact.Email, new { @data_parsley_type = "email", @Required = "Required", @class = "form-control", @placeholder = "Email" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="phone">
            Điện thoại <span class="required">*</span>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            @Html.TextBoxFor(x => Model.Contact.Phone, new {  @Required = "Required", @class = "form-control", @placeholder = "Điện thoại" })

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="address">
            Địa chỉ
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            @Html.TextBoxFor(x => Model.Contact.Address, new {  @class = "form-control", @placeholder = "Địa chỉ" })
        </div>
    </div>
    <h4 class="form-section"><i class="fa fa-paperclip"></i> Yêu cầu đặc biệt</h4>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="notes">
            Nội dung
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            @Html.TextAreaFor(x => Model.Contact.Notes, new {  @class = "form-control", @placeholder = "Nội dung yêu cầu" ,@rows = "5" })
        </div>
    </div>
</div>
<div class="clearfix">

</div>
