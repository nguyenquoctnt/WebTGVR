@model VDMMutiline.SharedComponent.Params.SettingGroupParam
@using VDMMutiline.Ultilities
@{
    var listin = new List<int> { 1, 2, 3, 4, 5, 6, 18, 14 };
    var rowIndex = 0;
}
<div class="card">
    @using (Html.BeginForm("SettingGroup", "Settings", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @data_parsley_validate = "", id = "frsettinggroup", @role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(z => Model.IdGroup)
        <div class="card-header danhsach">
            <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
            <div class="heading-elements">
                <ul class="list-inline mb-0">
                    <li class="addnew">
                        <button type="submit"  class="btn btn-success btn-block btnaddnew" style="
    height: 35px;
    padding-top: 9px;
    width: 150px;
">
                            <i style="padding-right:10px" class="fa fa-save"></i>Lưu
                        </button>
                    </li>
                    <li class="fullscree"><a data-action="expand"><i class="ft-maximize"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="card-content collapse show">
            <div class="card-body card-dashboard">
                <div class="table-responsive">
                    <div class="tableconte">
                        <table id="dynamic-table" class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th class="sort-numeric">STT</th>
                                    <th>Tiêu đề</th>
                                    <th>Giá trị</th>
                                    <th>Mô tả</th>
                                    <th>Lần cuối cập nhập</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.SettingGroupInfos != null)
                                {
                                    for (int i = 0; i < Model.SettingGroupInfos.Count; i++)
                                    {
                                        rowIndex++;
                                        <tr class="gradeA">
                                            <td>
                                                @Html.HiddenFor(z => Model.SettingGroupInfos[i].VaitroId)
                                                @Html.HiddenFor(z => Model.SettingGroupInfos[i].CreateUser)
                                                @Html.HiddenFor(z => Model.SettingGroupInfos[i].IdKey)
                                                @Html.HiddenFor(z => Model.SettingGroupInfos[i].IDSetting)
                                                @rowIndex
                                            </td>
                                            <td>@Model.SettingGroupInfos[i].Name</td>
                                            <td>
                                                @Html.TextBoxFor(z => Model.SettingGroupInfos[i].Value)
                                            </td>
                                            <td>@Model.SettingGroupInfos[i].Description</td>
                                            <td>@Utility.GetDateString(Model.SettingGroupInfos[i].UpdateDate)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>