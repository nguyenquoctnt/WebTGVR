@using VDMMutiline.SharedComponent.Constants
@model VDMMutiline.SharedComponent.Params.BK_BookingParam
@{
    Layout = null;
}
@using (Html.BeginForm("Yeucauxuathoadon", "QuanLyVeDaDat", FormMethod.Post, new { @onsubmit = "return validateFormfrmyeucauxuat()", enctype = "multipart/form-data", @class = "form-horizontal", @data_parsley_validate = "", id = "frmyeucauxuat", @role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(z => Model.bookingid)
    <div class="form-horizontal" style="margin-top:20px">
        <div class="form-group">
            <label style="padding-left: 0px;" class="col-sm-2 control-label no-padding-right text-left"> Người xuất </label>
            <div style="padding-left: 0px;" class="col-sm-10">
                @Html.TextBoxFor(z => z.HoTenNguoixuly, new { @class = "form-control col-md-12", @placeholder = "Người xuất" })
            </div>
        </div>
        <div class="form-group">
            <label style="padding-left: 0px;" class="col-sm-2 control-label no-padding-right text-left"> Ngày </label>
            <div style="padding-left: 0px;" class="col-sm-10">
                <div class="input-group input-group-sm">
                    @Html.TextBoxFor(z => z.Ngayxuly, new { @required = "Required", @class = "form-control", @placeholder = "Ngày xuất" })
                    <span class="input-group-addon">
                        <i class="ace-icon fa fa-calendar"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label no-padding-right text-left"> Đã xuất </label>
            <div class="col-sm-4">
                @if (Model.Daxuly == null)
                {
                    Model.Daxuly = false;
                }
                @Html.CheckBox("Daxuly", Model.Daxuly == true)
            </div>
        </div>
        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <button id="submityeucauxuat" type="submit" class="btn btn-info"><i class="ace-icon fa fa-check bigger-110"></i>Cập nhập</button>
            </div>
        </div>
    </div>
    <script>
        jQuery(function ($) {
            $("#Ngayxuly").datepicker({
                showOtherMonths: false,
        selectOtherMonths: false,
        format: 'dd/mm/yyyy',
        }).datepicker("setDate", "@Model.Ngayxuly");
        });
        function validateFormfrmyeucauxuat() {
            var isDisabled = $("#submityeucauxuat").is(':disabled');
            if (!isDisabled) {
                $("#submityeucauxuat").attr("disabled", true);
                return true;
            } else {
                return false;
            }
        }
    </script>
}