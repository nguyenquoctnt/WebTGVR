@model VDMMutiline.SharedComponent.Params.BlockMailParam

@{
    Layout = null;
}

@using (Html.BeginForm("Create", "BlockEmail", FormMethod.Post, new { @class = "form form-horizontal", @data_parsley_validate = "", id = "frCreateBlockEmail", @role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.BlockMail.Id)
    <div class="form-body">
        <div class="form-group">
            <label class="col-sm-2 control-label no-padding-right">Email</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.BlockMail.Mail, new { @Required = "Required ", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label no-padding-right">Ghi chú</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.BlockMail.GhiChu, new { @Required = "Required ", @class = "form-control" })
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-actions center">
            <a onclick="submitform()" class="btn btn-success btn-min-width mr-1 mb-1 actionmodal"><i class="fa fa-save"></i>Cập nhật</a>
            <button type="button" class="btn btn-dark btn-min-width mr-1 mb-1 actionmodal" data-dismiss="modal"><i class="ft-corner-down-left"></i>Đóng</button>
        </div>
    </div>

}

