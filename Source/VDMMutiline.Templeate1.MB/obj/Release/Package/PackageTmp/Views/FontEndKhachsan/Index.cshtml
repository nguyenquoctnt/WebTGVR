@using PagedList.Mvc
@using VDMMutiline.Dao
@using VDMMutiline.SharedComponent.Constants
@using VDMMutiline.SharedComponent.EntityInfo
@using VDMMutiline.SharedComponent.Params
@using VDMMutiline.Ultilities
@model VDMMutiline.SharedComponent.Params.TblArticleParam
@{
    Layout = "~/Views/Shared/_LayouIndex.cshtml";
}@Html.Action("HeaderDetail", "Control")
<div class="hidden1 bgSelect" style="margin-top: 46px">
    <div class="row  top log logfix" style="">
        <div class="col-xs-12 cb">
           Khách sạn
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="contentdetail">
        @if (Model.PagedList.Count > 0)
        {
            <div class="row">
                <a href="@Url.Action("ChiTiet", "FontEndnew", new { key = Model.PagedList[0].SEOUrl })">
                    <img src="@Model.PagedList[0].Thumb" class="img-responsive" />
                </a>
                <div class="row bgSelect1 dl1">
                    <a href='@Url.Action("ChiTiet", "FontEndnew", new { key = Model.PagedList[0].SEOUrl })'>
                        @Model.PagedList[0].Tenbai
                    </a>
                </div>
            </div>
        }
        <div style="font-size: 12px;">
            @if (Model.PagedList.Count > 1)
            {
                var index = 0;
                <div class="row   ">
                    @foreach (var item in Model.PagedList.Skip(1).Take(4))
                    {

                        <div class="col-xs-6 dl2 " style="@(index % 2==0?"padding-right: 0px !important":"" )">
                            <div class="bgSelect1" style="min-height: 150px;">
                                <a href="@Url.Action("ChiTiet", "FontEndnew", new { key =item.SEOUrl })">
                                    <img style="height: 100px;" src="@item.Thumb" class="img-responsive" />
                                </a>
                                <a href='@Url.Action("ChiTiet", "FontEndnew", new { key =item.SEOUrl })'>
                                    @item.Tenbai
                                </a>
                            </div>
                        </div>
                        index++;
                    }
                </div>
            }
            @foreach (var item in Model.PagedList.Skip(5))
            {
                <div class="row   dl3">
                    <div class="bgSelect1" style="min-height: 60px;">
                        <a href="@Url.Action("ChiTiet", "FontEndnew", new { key =item.SEOUrl })">
                            <img src="@item.Thumb" width="320" align="left" />
                        </a>
                        <a href="@Url.Action("ChiTiet", "FontEndnew", new { key =item.SEOUrl })">
                            <div style="font-weight:bold;height:30px;">
                                <a href='@Url.Action("ChiTiet", "FontEndnew", new { key =item.SEOUrl })'>
                                    @item.Tenbai
                                </a>
                            </div>

                            <br />
                            <span style="color: #777777;">
                                @(item.NgayTao.HasValue ? item.NgayTao.Value.ToString("dd") : "") Tháng @(item.NgayTao.HasValue ? item.NgayTao.Value.ToString("MM, yyyy") : "")


                            </span>
                        </a>
                    </div>
                </div>
            }
        </div>
        @if (ViewBag.page + 1 < Model.PagingInfo.RecordCount)
        {<div class="row  log3 " style="background: transparent;">
                <a id="Button1" text="" style="    color: #fff;background-color: #283891;padding: 6px 10px;" href="@Url.Action("Index", new { page = ViewBag.page+1 })" cssclass="btt">Xem thêm</a>
            </div>
        }
    </div>
</div>




