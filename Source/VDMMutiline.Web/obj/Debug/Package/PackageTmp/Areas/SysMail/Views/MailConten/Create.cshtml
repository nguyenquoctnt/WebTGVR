@model VDMMutiline.SharedComponent.Params.MailContenParam
@{
    Layout = null;
}
<script src="/Scripts/ckeditor/ckeditor.js"></script>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Create", "MailConten", FormMethod.Post, new { @class = "form-horizontal", @data_parsley_type = "", id = "frCreateMailConten", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.MailContend.ID)
            <div class="form-group">
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Tiêu đề</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.MailContend.TieuDe, new { @Required = "Required ", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Nội dung</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(x => x.MailContend.Contend, new { @Required = "Required ", @class = "ckeditor form-control", })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="clearfix form-actions">
                <div class="col-md-12 center">
                    <a onclick="submitform()" class="btn btn-info"><i class="ace-icon fa fa-floppy-o bigger-125"></i>Lưu và gửi</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="ace-icon fa fa-times bigger-125"></i>Đóng</button>
                </div>
            </div>
        }
    </div>
</div>
