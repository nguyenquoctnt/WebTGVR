@model VDMMutiline.Core.Models.ResetPasswordViewModel
@{
    Layout = null;
    ViewBag.Title = "Quản lý tài khoản";
    ViewBag.Description = "Reset mật khẩu";
}
@using (Html.BeginForm("ResetUserPassword", "SysTaikhoan", new { @area = "Sys" }, FormMethod.Post, new { @data_parsley_validate = "", @class = "form-horizontal", enctype = "multipart/form-data", id = "frResetUserPassword", @role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.UserId)
    <div class="form-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Tài khoản</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.Username, new { @readonly = "readonly", @Required = "Required", @class = "form-control", @placeholder = "" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Mật khẩu</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.Password, new { @Required = "Required", @class = "form-control", @placeholder = "" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 label-control">Xác nhận mật khẩu</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.ConfirmPassword, new { @Required = "", @class = "form-control", @placeholder = "" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-actions center">
            <a onclick="submitResetUserPassword()" class="btn btn-success btn-min-width mr-1 mb-1 actionmodal"><i class="fa fa-save"></i>Cập nhật</a>
            <button type="button" class="btn btn-dark btn-min-width mr-1 mb-1 actionmodal" data-dismiss="modal"><i class="ft-corner-down-left"></i>Đóng</button>
        </div>
    </div>
}

