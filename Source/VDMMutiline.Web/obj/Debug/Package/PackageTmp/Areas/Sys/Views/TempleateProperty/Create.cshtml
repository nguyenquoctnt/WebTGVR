@model VDMMutiline.SharedComponent.Params.TempleteSetting.TempleatePropertyParam
@{
    Layout = null;
}

@using (Html.BeginForm("Create", "TempleateProperty", FormMethod.Post, new { @class = "form form-horizontal", @data_parsley_validate = "", id = "frCreateTempleateProperty", @role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.TempleateProperty.Id)
    <div class="form-body">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 label-control">Nhóm</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.TempleateProperty.IdGroup, Model.TempleatePropertyGroupInfos.Select(n => new SelectListItem { Selected = n.Id == Model.TempleateProperty.IdGroup, Text = n.Name, Value = n.Id.ToString() }), new { @class = "form-control", @placeholder = "" })
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 label-control">Key</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.TempleateProperty.Keyd, new { @Required = "Required", @class = "form-control", @placeholder = "" })
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 label-control">Tên thuộc tính</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.TempleateProperty.Name, new { @Required = "Required", @class = "form-control", @placeholder = "" })
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 label-control">Ghi chú</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(x => x.TempleateProperty.Note, new { @Required = "Required", @class = "form-control", @placeholder = "" })
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 label-control">Giá trị mặc định</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(x => x.TempleateProperty.DefaultValue, new { @Required = "Required", @class = "form-control", @placeholder = "" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-4 label-control">Loại thuộc tính</label>
                <div class="col-md-8">
                    @Html.DropDownListFor(x => x.TempleateProperty.TypeControl, VDMMutiline.SharedComponent.Constants.Constant.LoaiThuocTinh.dctName.Select(z => new SelectListItem { Selected = z.Key == Model.TempleateProperty.TypeControl, Value = z.Key.ToString(), Text = z.Value }), new { @Required = "Required", @class = "form-control thutu", @placeholder = "" })
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="form-actions center">
            <a onclick="submitform()" class="btn btn-success btn-min-width mr-1 mb-1 actionmodal"><i class="fa fa-save"></i>Cập nhật</a>
            <button type="button" class="btn btn-dark btn-min-width mr-1 mb-1 actionmodal" data-dismiss="modal"><i class="ft-corner-down-left"></i>Đóng</button>
        </div>
    </div>

}

