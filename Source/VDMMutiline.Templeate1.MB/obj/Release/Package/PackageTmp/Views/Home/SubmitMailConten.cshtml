@{
    Layout = null;
}


@using (Html.BeginForm("SubmitMail", "Home", FormMethod.Post, new { @class = "newsletter-form", @data_parsley_validate = "", id = "frCreate", @role = "form" }))
{
    <style>
        .footermail .parsley-required {
            width: 100%;
            position: absolute;
            color: red;
            margin-top: 32px;
        }

        .footermail .parsley-type {
            width: 100%;
            position: absolute;
            color: red;
            margin-top: 32px;
        }
    </style>

    <input class="text newsletter-email" data-parsley-type="email" required="required" type="email" name="mail" id="mail" value="" placeholder="Enter your email..." tabindex="500" onfocus=" if (this.value == 'Enter your email...') { this.value = ''; }" onblur="if (this.value == '') { this.value='Enter your email...';} ">
    <input name="submit" class="submit newsletter-submit" type="submit" value="Đăng ký" tabindex="501">
