<div class="hidden1 bgSelect" style="margin-top: 46px; background-image: url(/Content/VDM/img/paris.jpg);background-position: center center;background-attachment: fixed;background-size: cover;">
    <div class="row  top log logfix" style="">
        <div class="col-xs-12 cb">
            Đăng nhập
        </div>

    </div>
    <div class="clearfix"></div>
    <div class="contentdetail">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @data_parsley_validate = "", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="travelo-box" style="overflow:hidden">
                <div class="row form-group">
                    <div class="col-xs-12">
                        <span class="block input-icon input-icon-right" style="color: red">
                            @Html.Raw(ViewBag.erro)
                        </span>
                    </div>
                    <div class="col-xs-12">
                        <label> Tài khoản</label>
                        @Html.TextBoxFor(m => m.UserName, new { Required = "Required", @class = "form-control form-control-lg input-lg", @placeholder = "Tài khoản", @autofocus = "autofocus" })
                    </div>
                    <div class="col-xs-12" style="margin-top: 10px;">
                        <label> Mật khẩu</label>
                        @Html.PasswordFor(m => m.Password, new { Required = "Required", @class = "form-control form-control-lg input-lg", @placeholder = "Mật khẩu" })
                    </div>
                    <disv class="col-xs-12" style="margin-top: 10px;">
                        <div class="toolbar clearfix">
