    <div class="row">
        <div class="form-group col-md-6 col-xs-12">
            <small>Giá chưa bao gồm phí xuất vé <span class="required">(*)</span></small>
            @Html.TextBoxFor(x => Model.rTotal, new { @oninput = "formatMoney($(this))", @Required = "Required", @class = "form-control", @placeholder = "Giá vé" })
        </div>
        <div class="clearfix"></div>
    </div>*@
</div>