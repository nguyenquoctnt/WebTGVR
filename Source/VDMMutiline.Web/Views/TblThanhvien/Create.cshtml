<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Create", "TblThanhvien", FormMethod.Post, new { @class = "form-horizontal", @data_parsley_type = "", id = "frCreateTblThanhvien", @role = "form" }))
