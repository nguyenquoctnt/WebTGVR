                    @Html.TextBoxFor(x => x.TblThanhvien.TenThanhvien, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
                </div>
                <label class="col-sm-2 control-label no-padding-right">Tên đăng nhập</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.TblThanhvien.Tendangnhap, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Loại Thành viên</label>
                <div class="col-sm-4">
                    @Html.DropDownListFor(x => x.TblThanhvien.LoaiThanhvien, Constant.LoaiThanhvien.dctName.Select(n => new SelectListItem { Selected = n.Key == Model.TblThanhvien.LoaiThanhvien, Text = n.Value, Value = n.Key.ToString() }), new { @class = "col-xs-12 col-sm-12", @placeholder = "" })
