@using CaptchaMvc.HtmlHelpers
@using VDMMutiline.SharedComponent.EntityInfo;
@model VDMMutiline.Core.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
  //  var listgroup = (List<AspNetGroupsInfo>)ViewBag.Groups;
}
<style>
    
    img#CaptchaImage {
        width: 50%;
        height: 50px;
    }
    input#CaptchaInputText {
        width: 47%;
        float: right;
        border: 1px solid #d4d4d4;
        height: 49px;
        font-size: 35px;
        padding-top: 0px;
        padding-left: 5px;
        font-weight: bold;
    }
    .divcapchar br {
        display: none;
    }
</style>
<p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2 my-1"><span>Đăng ký tài khoản</span></p>
<div class="card-body">
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @required = "required", @data_parsley_validate = "", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset class="form-group position-relative has-icon-left mb-0">
            <label style="color:red">@Html.Raw(ViewBag.Erro)</label>
        </fieldset>
        <fieldset class="form-group position-relative has-icon-left">
            @Html.TextBoxFor(m => m.UserName, new { @required = "required", @data_parsley_validate = "", @data_parsley_group = "loginform", @class = "form-control form-control-lg input-lg", autocomplete = "off", @placeholder = "Tên đăng nhập", @autofocus = "autofocus" })
            <div class="form-control-position">
                <i class="fa fa-user"></i>
            </div>
        </fieldset>
        <fieldset class="form-group position-relative has-icon-left">
            @Html.TextBoxFor(m => m.DisplayName, new { @required = "required", @data_parsley_validate = "", @data_parsley_group = "loginform", @class = "form-control form-control-lg input-lg", autocomplete = "off", @placeholder = "Tên hiển thị", @autofocus = "autofocus" })
            <div class="form-control-position">
                <i class="fa fa-user"></i>
            </div>
        </fieldset>
        <fieldset class="form-group position-relative has-icon-left">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @required = "required", @data_parsley_validate = "", @data_parsley_group = "loginform", @class = "form-control form-control-lg input-lg", autocomplete = "off", @placeholder = "Điện thoại", @autofocus = "autofocus" })
            <div class="form-control-position">
                <i class="fa fa-phone "></i>
            </div>
        </fieldset>
        <fieldset class="form-group position-relative has-icon-left">
            @Html.TextBoxFor(m => m.Email, new { @required = "required", @data_parsley_validate = "", @data_parsley_group = "loginform", @class = "form-control form-control-lg input-lg", autocomplete = "off", @placeholder = "Địa chỉ mail", @autofocus = "autofocus" })
            <div class="form-control-position">
                <i class="fa fa-envelope"></i>
            </div>
        </fieldset>
        <fieldset class="form-group position-relative has-icon-left">
            @Html.TextBoxFor(m => m.Location, new { @required = "required", @data_parsley_validate = "", @data_parsley_group = "loginform", @class = "form-control form-control-lg input-lg", autocomplete = "off", @placeholder = "Địa chỉ", @autofocus = "autofocus" })
            <div class="form-control-position">
                <i class="fa fa-address-card"></i>
            </div>
        </fieldset>
        <fieldset class="form-group position-relative has-icon-left">
            @Html.PasswordFor(m => m.Password, new { @required = "required", @data_parsley_validate = "", @data_parsley_group = "loginform", @class = "form-control form-control-lg input-lg", autocomplete = "off", @placeholder = "Mật khẩu" })
            <div class="form-control-position">
                <i class="fa fa-key"></i>
            </div>
        </fieldset>
        <fieldset class="form-group position-relative has-icon-left">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @required = "required", @data_parsley_validate = "", @data_parsley_group = "loginform", @class = "form-control form-control-lg input-lg", autocomplete = "off", @placeholder = "Nhắc lại mật khẩu" })
            <div class="form-control-position">
                <i class="fa fa-key"></i>
            </div>
        </fieldset>
        @*<fieldset class="form-group position-relative has-icon-left">
            @Html.DropDownListFor(x => x.IdGroup, listgroup.Select(n => new SelectListItem { Selected = n.Id == Model.IdGroup, Text = n.Name, Value = n.Id.ToString() }), new { @class = "form-control", @placeholder = "" })
        </fieldset>*@
        <fieldset class="form-group position-relative has-icon-left divcapchar">
            @Html.MathCaptcha("Làm mới", "", "Thông tin bắt buộc", true)
        </fieldset>
        <div class="form-group row">
            <div class="col-md-6 col-12 text-center text-sm-left">
                <fieldset>
                    <input type="checkbox" class="chk-remember" />
                    <label for="remember-me"> Tôi đồng ý với điều khoản</label>
                </fieldset>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-info btn-block"><i class="fa fa-lock"></i> Đăng ký</button>
    }
</div>
<div class="card-body">
    <a href="@Url.Action("Login","Account", new { area=""})" class="btn btn-outline-danger btn-block"><i class="fa fa-user"></i> Quay lại đăng nhập</a>
</div>




