@model VDMMutiline.SharedComponent.Params.MessageRoomParam
@{
    Layout = null;
}

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Create", "MessageRoom", FormMethod.Post, new { @class = "form-horizontal", @data_parsley_type = "", id = "frCreateMessageRoom", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.MessageRoom.Id)
            <div class="form-group">
                
            </div>
            <div class="form-group">
<label class="col-sm-2 control-label no-padding-right">Id</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.MessageRoom.Id, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">Tenhom</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.MessageRoom.Tenhom, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">Ngaytao</label><div class="col-sm-10">
 <div class="input-group">
<input class="form-control date-picker" data-date-format="dd/mm/yyyy" name="Ngaytao" id="Ngaytao" type="text"/><span class="input-group-addon">
<i class="fa fa-calendar bigger-110"></i>
</span>
</div>
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">Nguoitao</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.MessageRoom.Nguoitao, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">TypeRoom</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.MessageRoom.TypeRoom, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">Trangthai</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.MessageRoom.Trangthai, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">Thanhvien</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.MessageRoom.Thanhvien, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
 <div class="form-group">
<label class="col-sm-2 control-label no-padding-right">Daxoa</label><div class="col-sm-10">
@if(Model.MessageRoom.Daxoa == null)
{ 
Model.MessageRoom.Daxoa = false;
}
@Html.CheckBox("MessageRoom.Daxoa", Model.MessageRoom.Daxoa == true)
 </div>
</div>
 <div class="form-group">
<label class="col-sm-2 control-label no-padding-right">IsDefault</label><div class="col-sm-10">
@if(Model.MessageRoom.IsDefault == null)
{ 
Model.MessageRoom.IsDefault = false;
}
@Html.CheckBox("MessageRoom.IsDefault", Model.MessageRoom.IsDefault == true)
 </div>
</div>

            
           
            <div class="clearfix form-actions">
                <div class="col-md-12 center">
                    <a onclick="submitform()" class="btn btn-info"><i class="ace-icon fa fa-floppy-o bigger-125"></i>Cập nhật</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="ace-icon fa fa-times bigger-125"></i>Đóng</button>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $('.date-picker').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
</script>