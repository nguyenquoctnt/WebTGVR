@model VDMMutiline.SharedComponent.Params.MessageParam
@{
    Layout = null;
}

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Create", "Message", FormMethod.Post, new { @class = "form-horizontal", @data_parsley_type = "", id = "frCreateMessage", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Message.Id)
            <div class="form-group">
                
            </div>
            <div class="form-group">
<label class="col-sm-2 control-label no-padding-right">Id</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.Message.Id, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">IdNguoigui</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.Message.IdNguoigui, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">TenNguoigui</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.Message.TenNguoigui, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">RoomId</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.Message.RoomId, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">ContentChat</label>
<div class="col-sm-10">
@Html.TextBoxFor(x => x.Message.ContentChat, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
</div>
</div>
 <div class="form-group">
<label class="col-sm-2 control-label no-padding-right">Daxoa</label><div class="col-sm-10">
@if(Model.Message.Daxoa == null)
{ 
Model.Message.Daxoa = false;
}
@Html.CheckBox("Message.Daxoa", Model.Message.Daxoa == true)
 </div>
</div>
<div class="form-group">
<label class="col-sm-2 control-label no-padding-right">NgayGui</label><div class="col-sm-10">
 <div class="input-group">
<input class="form-control date-picker" data-date-format="dd/mm/yyyy" name="NgayGui" id="NgayGui" type="text"/><span class="input-group-addon">
<i class="fa fa-calendar bigger-110"></i>
</span>
</div>
</div>
</div>

            
           
            <div class="clearfix form-actions">
                <div class="col-md-12 center">
                    <a onclick="submitform()" class="btn btn-info"><i class="ace-icon fa fa-floppy-o bigger-125"></i>Cập nhật</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="ace-icon fa fa-times bigger-125"></i>Đóng</button>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $('.date-picker').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
</script>