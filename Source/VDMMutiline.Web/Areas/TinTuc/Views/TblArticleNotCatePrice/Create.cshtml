@model VDMMutiline.SharedComponent.Params.TblArticleParam
@{
    Layout = null;
}
<script src="/Scripts/ckeditor/ckeditor.js"></script>
<link href="/Content/TreeGridBootstrap/css/jquery.treegrid.css" rel="stylesheet" />
<script src="/Content/TreeGridBootstrap/js/jquery.treegrid.js"></script>
<script src="/Content/TreeGridBootstrap/js/jquery.treegrid.min.js"></script>
<script src="/Content/TreeGridBootstrap/js/jquery.treegrid.bootstrap3.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tree').treegrid();
    });
</script>
@using (Html.BeginForm("Create", "TblArticleNotCatePrice", FormMethod.Post, new { @class = "form-horizontal", @data_parsley_validate = "", id = "frCreateTblArticle", @role = "form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.TblArticle.Id)
    @Html.HiddenFor(x => x.TblArticle.LoaiBaiviet)

    <div class="form-body">
        @Html.HiddenFor(x => x.TblArticle.Id)
        @Html.HiddenFor(x => x.TblArticle.LoaiBaiviet)

        <ul class="nav nav-tabs nav-linetriangle nav-justified">

            <li class="nav-item active"><a class="nav-link active" data-toggle="tab" href="#ttchung"><i class="green ace-icon fa fa-pencil-square-o bigger-125"></i> Thông tin chung</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#nd"><i class="ace-icon fa fa-bars bigger-125"></i> Nội dung</a></li>
            @*<li class="nav-item" style="display:none"><a class="nav-link" data-toggle="tab" href="#cm"><i class="ace-icon fa fa-list bigger-125"></i> Chuyên mục</a></li>*@
        </ul>
        <div class="tab-content">
            <div id="ttchung" class="tab-pane fade in active show">
                <div class="form-group">
                </div>
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 label-control">Tiêu đề</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.TblArticle.Tenbai, new { @Required = "Required", @class = "form-control", @placeholder = "" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 label-control">Mô tả</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(x => x.TblArticle.Mota, new { @class = "form-control", @placeholder = "" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 label-control">Giá</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.TblArticle.SEODescription, new { @class = "form-control", @placeholder = "" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 label-control">Từ khóa SEO</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.TblArticle.SEOKeyword, new { @class = "form-control", @placeholder = "" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 label-control">Tiêu đề SEO</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.TblArticle.SEOTitle, new { @class = "form-control", @placeholder = "" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 label-control">Thứ tự</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.TblArticle.Thutu, new { @class = "form-control thutu", @placeholder = "" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-md-4 label-control"></label>
                        <div class="col-md-8">
                            <div class="checkedcontrol">
                                @if (Model.TblArticle.TinNoiBat == null)
                                {
                                    Model.TblArticle.TinNoiBat = false;
                                }
                                @Html.CheckBox("TblArticle.TinNoiBat", Model.TblArticle.TinNoiBat == true, new { @class = "icheckboxcs" })
                                <label for="SysMenu_IsSystem">Tin nổi bật</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-md-4 label-control"></label>
                        <div class="col-md-8">
                            <div class="checkedcontrol">
                                @if (Model.TblArticle.Hienthitrangchu == null)
                                {
                                    Model.TblArticle.Hienthitrangchu = false;
                                }
                                @Html.CheckBox("TblArticle.Hienthitrangchu", Model.TblArticle.Hienthitrangchu == true, new { @class = "icheckboxcs" })
                                <label for="SysMenu_IsSystem">Hiển thị trang chủ</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-md-4 label-control">Ảnh đại diện</label>
                        <div class="col-md-8">
                            <input type="file" name="Thumbinput" class="actFile" />
                            <br />
                            <span style="    font-style: italic;    color: red;">(Kích thước:650x470)</span>
                            <br />
                            @if (!string.IsNullOrEmpty(Model.TblArticle.Thumb))
                            {
                                <img src="@Model.TblArticle.Thumb" style="height: 100px; width: 100px;" />
                            }
                            @Html.HiddenFor(x => x.TblArticle.Thumb)
                        </div>
                    </div>
                </div>
                @*<div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-md-4 label-control">Hình ảnh</label>
                            <div class="col-md-8">
                                <input type="file" name="Imageimput" class="actFile" />
                                <br />
                                @if (!string.IsNullOrEmpty(Model.TblArticle.Image))
                                {
                                    <img src="@Model.TblArticle.Image" style="height: 100px; width: 100px;" />
                                }
                                @Html.HiddenFor(x => x.TblArticle.Image)
                            </div>
                        </div>
                    </div>*@
            </div>
            <div id="nd" class="tab-pane fade">
                @Html.TextAreaFor(x => x.TblArticle.Noidung, new { @class = "ckeditor form-control", @placeholder = "" })
            </div>
            <div id="cm" style="display:none" class="tab-pane fade">
                <table id="tree" class=" table table-striped table-bordered tree">
                    <thead>
                        <tr>
                            <th>Tiêu đề</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.Raw(ViewBag.conten)
                    </tbody>
                </table>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-actions center">
            <a onclick="submitform()" class="btn btn-success btn-min-width mr-1 mb-1 actionmodal"><i class="fa fa-save"></i>Cập nhật</a>
            <button type="button" class="btn btn-dark btn-min-width mr-1 mb-1 actionmodal" data-dismiss="modal"><i class="ft-corner-down-left"></i>Đóng</button>
        </div>
    </div>

}




