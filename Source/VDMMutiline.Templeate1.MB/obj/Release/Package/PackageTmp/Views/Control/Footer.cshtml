@using VDMMutiline.Dao
@using VDMMutiline.SharedComponent.Constants
@using VDMMutiline.SharedComponent.EntityInfo
@using VDMMutiline.SharedComponent.Params
@using VDMMutiline.Ultilities
@using VDMMutiline.Core.Common
@using VDMMutiline.Core.UI;
@model List<VDMMutiline.SharedComponent.EntityInfo.TblArticleInfo>
@{
    var curentDomain = SiteMuti.Getsitename();
    var CurentUser = CommonUI.GetInforByDomain(curentDomain);
    var setting = CommonUI.GetSettingByDomain(curentDomain, true);
    Layout = null;
}
<style>
    .CheapFlight {
        background: #0685AA;
        color: #fff;
        margin-top: 10px;
    }

    .wrap-bottom-hotline {
        float: left;
        width: 100%;
        height: 45px;
        padding: 5px 0 0 0;
        margin: 0 0 10px 0;
    }

    .wrap-bottom-hotline-bg {
        float: left;
        width: 100%;
        margin: 0 0 0 0;
        border-bottom: 1px solid #fcfab0;
        height: 33px;
    }

    .wrap-bottom-hotline-right .help {
        float: left;
        color: #fcfab0;
        font-size: 18px;
        font-weight: bold;
        padding: 6px 20px 0 0;
    }

    .wrap-bottom-hotline-right {
        float: right;
    }

        .wrap-bottom-hotline-right .hotline-number {
            background: url('/Content/1399295640745.png') 0 5px no-repeat;
            float: left;
            color: #fcfab0;
            font-size: 24px;
            font-weight: bold;
            padding: 0 0 0 33px;
        }

    .wrap-bottom-hotline-left {
        text-transform: uppercase;
        float: left;
        color: #fcfab0;
        padding: 8px 0 0 0;
        font-size: 14px;
    }

    h2.pad0 {
        padding-top: 0px;
        margin-top: 0px;
        font-size: 22px;
    }

    ul.list1 {
        line-height: 25px;
    }
</style>
<div id="CheapFlight" class="content CheapFlight">
    <div class="container">
        <div class="wrap-bottom-hotline">
            <div class="wrap-bottom-hotline-bg">
                <div class="wrap-bottom-hotline-left hidden-xs">
                    @curentDomain
                </div>
                <div class="wrap-bottom-hotline-right">
                    <span class="help">Bạn cần giúp đỡ?</span>
                    <span class="hotline-number" style="height: 30px;"><a href="tel:@CurentUser.PhoneNumber " style="color:#fff">@CurentUser.PhoneNumber </a></span>
                </div>
            </div>
        </div>
        <div>

            <div class="row">
                <div class="col-md-2">
                    <ul class="list1">
                        <li>
                            <a href="/" title="#">
                                Trang chủ
                            </a>
                        </li>
                        @foreach (var item in Model.OrderBy(z => z.Thutu))
                        {
                            <li>
                                <a href="@Url.Action("ChiTiet", "FontEndnew", new {key = item.SEOUrl})">
                                    @item.Tenbai
                                </a>
                            </li>
                        }
                        <li>
                            <a href="@Url.Action("Index","FontEndTintuc")">
                                Tin tức
                            </a>
                        </li>

                        <li>
                            <a href="@Url.Action("Index","FontEndKhachsan")">
                                Khách sạn
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","FontEndDulich")">
                                Visa du lịch
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","About")">
                                Liên hệ
                            </a>
                        </li>

                    </ul>
                </div>
                <div class="col-md-5">
                        <iframe style="border: none; overflow: hidden;" src="@CurentUser.Facebook" data-style="border: none; overflow: hidden;"></iframe>
                    </div>
                   
                <div class="col-md-5">
                    <p>
                        <span style="color: #ffffff; font-size: 10pt;">
                            <strong>@UIUty.GetsettingByKey(setting, "PRT_COMPANY_NAME")</strong>
                        </span>
                        <br>
                        <span style="color: #ffffff; font-size: 10pt;">
                            Đ/C :@UIUty.GetsettingByKey(setting, "PRT_ADDRESS")
                        </span>
                        <br>
                        <span style="color: #ffffff; font-size: 10pt;">
                            Điện thoại : @CurentUser.PhoneNumber - @CurentUser.PhoneNumber2
                        </span>
                        <br>
                        <span style="color: #ffffff; font-size: 10pt;">
                            Email : @UIUty.GetsettingByKey(setting, "PRT_EMAIL")
                        </span>
                    </p>
                </div>
            </div>



            <div class="row">

            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
<style>
    .list1 li a {
        color: #fff;
    }
</style>

