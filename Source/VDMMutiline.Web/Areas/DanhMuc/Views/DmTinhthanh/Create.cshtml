@model VDMMutiline.SharedComponent.Params.DmTinhthanhParam
@{
    Layout = null;
}

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Create", "DmTinhthanh", FormMethod.Post, new { @class = "form-horizontal", @data_parsley_type = "", id = "frCreateDmTinhthanh", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.DmTinhthanh.Id)
            <div class="form-group">
                
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Mã tỉnh</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.DmTinhthanh.Matinh, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Tên tỉnh</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.DmTinhthanh.Tentinh, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Mã bưu chính</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.DmTinhthanh.MaBuuchinh, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Mã vùng điện thoại</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.DmTinhthanh.MavungDT, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Mã biển số xe</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.DmTinhthanh.BiensoXe, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Quốc gia</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.DmTinhthanh.IdQuocgia,Model.DmQuocgiaInfos.Select(n => new SelectListItem { Selected = n.Id == Model.DmTinhthanh.IdQuocgia, Text = n.Tenquocgia, Value = n.Id.ToString() }), new { @class = "col-xs-12 col-sm-12", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Thứ tự</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.DmTinhthanh.Thutu, new { @Required = "Required", @class = "col-xs-12 col-sm-12 thutu", @placeholder = "" })
                </div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-md-12 center">
                    <a onclick="submitform()" class="btn btn-info"><i class="ace-icon fa fa-floppy-o bigger-125"></i>Cập nhật</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="ace-icon fa fa-times bigger-125"></i>Đóng</button>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $('.date-picker').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
</script>