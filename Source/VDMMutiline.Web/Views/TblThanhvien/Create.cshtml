                </div>
                <label class="col-sm-2 control-label no-padding-right">Thứ tự</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.TblThanhvien.Thutu, new { @Required = "Required", @class = "col-xs-4 col-sm-4 thutu", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Cho phép đăng nhập</label>
                <div class="col-sm-4">
                        @if (Model.TblThanhvien.ChophepDangnhap == null)
                        {
                            Model.TblThanhvien.ChophepDangnhap = false;
                        }
                        @Html.CheckBox("TblThanhvien.ChophepDangnhap", Model.TblThanhvien.ChophepDangnhap == true)
                    </div>
                <label class="col-sm-2 control-label no-padding-right">Có gian hàng</label>
                <div class="col-sm-4">
                    @if (Model.TblThanhvien.CoGianhang == null)
                    {
                        Model.TblThanhvien.CoGianhang = false;
                    }
                    @Html.CheckBox("TblThanhvien.CoGianhang", Model.TblThanhvien.CoGianhang == true)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Email</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.TblThanhvien.Email, new { @Required = "Required", @class = "col-xs-12 col-sm-12 email", @placeholder = "" })
                </div>
                <label class="col-sm-2 control-label no-padding-right">Điện thoại</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.TblThanhvien.Dienthoai, new { @Required = "Required", @class = "col-xs-12 col-sm-12 phone", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Mô tả</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.TblThanhvien.Mota, new { @Required = "Required", @class = "col-xs-12 col-sm-12", @placeholder = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right">Điểm thưởng</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.TblThanhvien.Diemthuong, new { @Required = "Required", @class = "col-xs-12 col-sm-12 number", @placeholder = ""})
                </div>
                <label class="col-sm-2 control-label no-padding-right">Gạch</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.TblThanhvien.Gach, new { @Required = "Required", @class = "col-xs-12 col-sm-12 number", @placeholder = "" })
