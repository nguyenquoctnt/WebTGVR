                                    <a href="@Url.Action("ForgotPassword", "Account")" data-target="#forgot-box" class="forgot-password-link">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Quên mật khẩu
                                    </a>
                                </div>*@
                            <div>
                                <a href="@Url.Action("Register", "Account")" data-target="#signup-box" class="user-signup-link">
                                    <i class="ace-icon fa fa-arrow-left"></i>   Đăng ký tài khoản
                                </a>
                            </div>
                        </div>
                    </disv>
                    <div class="col-xs-12" style="margin-top: 10px;text-align:center">
                        <button type="submit" style="width:150px !important;font-size:18px" value="Gửi ý kiến của bạn" class="full-width btnSubmit ">Đăng nhập</button>
                    </div>
                </div>
            </div>

        }
    </div>
