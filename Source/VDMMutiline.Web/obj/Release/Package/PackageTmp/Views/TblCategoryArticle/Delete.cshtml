@model VDMMutiline.SharedComponent.Entities.TblCategoryArticle
@{
    ViewBag.Title = "Quản lý";
    ViewBag.Description = "Xác nhận xóa bản ghi";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12 mt-15">
      
                @using (Html.BeginForm("Delete", "TblCategoryArticle", FormMethod.Post, new { id = "frdeleteTblCategoryArticle", @role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)
                    
                    <p style=" color: red" >@ViewBag.Erro</p>
                    <h5>Bạn có chắc chắn muốn xóa @Model.Id?</h5>
                    <a onclick="submitfomrdelete()" class="btn btn-white btn-warning btn-bold" type="submit">
                        <i class="ace-icon fa fa-trash-o bigger-120 orange"></i>
                        Xác nhận
                    </a>
                    <button type="button" class="btn btn-white btn-danger btn-bold" data-dismiss="modal"><i class="ace-icon fa fa-times bigger-125"></i>Đóng</button>
                }
       
    </div>
</div>
